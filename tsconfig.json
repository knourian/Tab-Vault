{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2017", "dom"],
    "types": ["jest","chrome"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}